{
  "name": "fonio",
  "version": "0.4.0",
  "description": "Quinoa story editor",
  "main": "dist/entry.js",
  "scripts": {
    "dev": "kotatsu serve --config ./webpack.config.dev.js --progress --babel --index ./index.html --public ./ ./src/main.js",
    "build": "kotatsu build client ./src/main.js -o build --progress --config ./webpack.config.prod.js --babel; node buildProdIndex",
    "lint": "eslint --fix src",
    "analyze": "webpack-bundle-analyzer build/stats.json",
    "comb": "csscomb src",
    "test": "mocha --compilers js:babel-core/register -R spec --recursive $(find src -name '*.spec.js')",
    "deploy": "npm run build && surge ./",
    "translations:backfill": "node translationScripts/backfillTranslations --locales ../src/translations/locales",
    "translations:discover": "node translationScripts/discoverTranslations --locales ../src/translations/locales --src ../src --namespacer translateNameSpacer --translatorFn translate",
    "translations:export:to:po": "node translationScripts/exportTranslationsToPo --locales ../src/translations/locales --dest ../translations",
    "translations:update:po": "node translationScripts/updateTranslationsToPo --locales ../src/translations/locales --dest ../translations",
    "translations:import:from:po": "node translationScripts/importTranslationsFromPo --locales ../src/translations/locales --src ../translations",
    "translations:update": "npm run translations:backfill;npm run translations:discover;npm run translations:update:po",
    "translations:addlanguage": "node translationScripts/addTranslationLanguage --translations-folder ../src/translations",
    "translations:gitaddpo": "git add translations"
  },
  "pre-commit": [
    "lint",
    "build",
    "comb",
    "test",
    "translations:update",
    "translations:gitaddpo"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medialab/fonio.git"
  },
  "author": "Robin de Mourat <robin.demourat@sciencespo.fr> (https://github.com/robindemourat)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/medialab/fonio/issues"
  },
  "engines": {
    "node": ">= 6.6"
  },
  "homepage": "https://github.com/medialab/fonio#readme",
  "dependencies": {
    "ajv": "^6.1.1",
    "axios": "^0.18.0",
    "citation-js": "^0.3.4",
    "codemirror": "^5.35.0",
    "config": "^1.30.0",
    "d3-dsv": "^1.0.5",
    "debounce-promise": "^3.1.0",
    "draft-convert": "^2.0.1",
    "draft-js": "^0.10.0",
    "draft-js-export-html": "^1.2.0",
    "draft-js-export-markdown": "^1.2.0",
    "file-saver": "^1.3.3",
    "github-api": "^3.0.0",
    "json-schema-defaults": "^0.4.0",
    "json2po": "^1.0.5",
    "object-path": "^0.11.4",
    "postcss": "^6.0.19",
    "postcss-prefix-selector": "^1.6.0",
    "pouchdb": "^6.3.4",
    "quinoa-design-library": "0.0.7",
    "quinoa-presentation-player": "^0.2.6",
    "quinoa-schemas": "^0.0.9",
    "quinoa-story-player": "^0.2.14",
    "react": "^16.2.0",
    "react-codemirror2": "^4.0.0",
    "react-dnd": "^2.4.0",
    "react-dnd-html5-backend": "^2.4.1",
    "react-dom": "^16.2.0",
    "react-dropzone": "^4.2.8",
    "react-form": "^3.5.5",
    "react-helmet": "^5.1.3",
    "react-input-autosize": "^2.2.1",
    "react-key-handler": "^1.0.1",
    "react-markdown": "^3.2.0",
    "react-media-player": "^0.7.0",
    "react-modal": "^3.2.1",
    "react-redux": "^5.0.4",
    "react-redux-loading-bar": "^3.1.1",
    "react-redux-toastr": "^7.3.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-select": "^1.0.0-rc.5",
    "react-sortable-hoc": "^0.8.3",
    "react-table": "^6.5.1",
    "react-textarea-autosize": "^5.0.7",
    "react-tooltip": "^3.4.0",
    "redux": "^3.6.0",
    "redux-i18n": "^1.1.4",
    "redux-pouchdb": "^0.1.1",
    "reselect": "^3.0.0",
    "scholar-draft": "^0.2.21",
    "socket.io-client": "^2.1.1",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "@yomguithereal/eslint-config": "^4.0.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators": "^6.13.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "chai": "^4.1.0",
    "colors": "^1.1.2",
    "css-loader": "^0.28.0",
    "csscomb": "^4.0.1",
    "enzyme": "^3.3.0",
    "eslint": "^4.3.0",
    "eslint-plugin-react": "^7.0.1",
    "file-loader": "^1.1.6",
    "fs-extra": "^5.0.0",
    "img-loader": "^3.0.0",
    "kotatsu": "^0.15.0",
    "mocha": "^5.0.1",
    "node-sass": "^4.5.2",
    "optimist": "^0.6.1",
    "po2json": "^0.4.5",
    "pre-commit": "^1.1.3",
    "raw-loader": "^0.5.1",
    "react-addons-test-utils": "^15.3.2",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.20.2",
    "uglifyjs-webpack-plugin": "^1.2.0",
    "url-loader": "^1.0.1",
    "webpack-bundle-analyzer": "^2.11.1",
    "wrench": "^1.5.9"
  },
  "babel": {
    "plugins": [
      "transform-decorators-legacy",
      "transform-decorators",
      "transform-object-rest-spread",
      "transform-class-properties"
    ],
    "presets": [
      "es2015",
      "react"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "@yomguithereal/eslint-config/es7",
      "@yomguithereal/eslint-config/react"
    ],
    "rules": {
      "require-jsdoc": 2,
      "react/forbid-prop-types": 0,
      "react/jsx-no-bind": 0
    },
    "globals": {
      "CONFIG": true
    }
  }
}
